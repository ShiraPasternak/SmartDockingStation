<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDSApplication.MoreInformationPage"
             Title="MoreInformationPage">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Title -->
        <Label Text="More Information" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20" />

        <!-- Icon -->
        <Image Source="lock_bicycles_icon.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" Margin="0,0,0,20" />

        <!--Buttons -->
        <Button 
            x:Name="BalanceBtn"
            Text="Balance and Transaction" 
            Clicked="BalanceAndTransactionClicked" 
            Margin="0,0,0,10" />
        <Button 
            x:Name="currBtn"
            Text="Current Parking History" 
            Clicked="CurrentParkingHistoryClicked" 
            Margin="0,0,0,10" />
        <Button 
            x:Name="histBtn"
            Text="Parking History" 
            Clicked="ParkingHistoryClicked" 
            Margin="0,0,0,10" />
    </StackLayout>
</ContentPage>