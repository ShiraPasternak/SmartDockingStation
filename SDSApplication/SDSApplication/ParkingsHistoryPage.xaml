<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDSApplication.ParkingsHistoryPage"
             Title="Parking History">
    <StackLayout>
        <Label Text="Parking History"
               FontSize="24"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,0,0,20" />

        <ListView x:Name="listParkingHistory" RowHeight="150" VerticalOptions="FillAndExpand">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <StackLayout Padding="10">
                            <Label Text="{Binding lockId}" />
                            <Label Text="{Binding startTime}" />
                            <Label Text="{Binding endTime}" />
                            <Label Text="{Binding duration}" />
                            <Label Text="{Binding cost}" />
                        </StackLayout>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackLayout>
</ContentPage>

