<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDSApplication.StartParkingPage"
             Title="StarParkingPage">

    <StackLayout Orientation="Horizontal" VerticalOptions="Center" HorizontalOptions="Center">
        <Button 
            x:Name="startParkingButton"
            BackgroundColor="Blue"
            WidthRequest="150"
            HeightRequest="150"
            CornerRadius="75"
            Text="Start"
            TextColor="White"
            FontSize="24"
            FontAttributes="Bold"
            Clicked="StartParkingButton_Clicked"
            VerticalOptions="Center"
            HorizontalOptions="Center"
            Margin="0,0,0,20" />
    </StackLayout>
</ContentPage>
