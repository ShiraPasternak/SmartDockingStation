<?xml version="1.0" encoding="utf-8" ?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDSApplication.MainPage">

    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">

        <!-- Title -->
        <Label Text="Smart Docking Station" FontSize="24" FontAttributes="Bold" HorizontalOptions="Center" Margin="0,0,0,20" />

        <!-- Icon -->
        <Image Source="lock_bicycles_icon.png" HeightRequest="100" WidthRequest="100" HorizontalOptions="Center" Margin="0,0,0,20" />

        <!-- Scan Buttons -->
        <Button 
            x:Name="scanBtn"
            Text="Scan Lock" 
            Clicked="Scan_Lock_Clicked" 
            Margin="0,0,0,10" />
    </StackLayout>
</ContentPage>
