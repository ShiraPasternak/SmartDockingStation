<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SDSApplication.NiceRidePage"
             Title="NiceRidePage">
    <Grid BackgroundColor="#F5F5F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        
        <StackLayout Grid.Row="0" VerticalOptions="Center" HorizontalOptions="Center">
            <Image Source="nice_ride_icon.png" HeightRequest="100" WidthRequest="100" />
            <Label Text="Have a safe and nice ride!"
                   HorizontalOptions="Center"
                   VerticalOptions="Center"
                   FontSize="24"
                   FontAttributes="Bold" />
        </StackLayout>
    </Grid>
</ContentPage>
