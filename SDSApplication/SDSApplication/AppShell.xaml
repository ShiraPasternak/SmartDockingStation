<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="SDSApplication.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SDSApplication"
    Shell.FlyoutBehavior="Flyout">

    <TabBar>
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate local:Views.MainView}"
            Route="MainPage" />
    </TabBar>
    <FlyoutItem Title="Scan and select device" 
                FlyoutIcon="{StaticResource IconBluetoothLE}">
        <ShellContent ContentTemplate="{DataTemplate local:HomePage}"
                      Route="HomePage" >
        </ShellContent>
    </FlyoutItem>
</Shell>